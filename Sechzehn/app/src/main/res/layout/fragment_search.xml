<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="de.tu_darmstadt.informatik.tk.ip.bravo.sechzehn.activities.BottomTabsActivity">

    <data>
        <variable name="frag" type="de.tu_darmstadt.informatik.tk.ip.bravo.sechzehn.fragments.SearchFragment" />
        <variable name="searchVM" type="de.tu_darmstadt.informatik.tk.ip.bravo.sechzehn.viewModels.SearchViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/mapFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/mapFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:uiCompass="false"
                map:uiRotateGestures="false"
                map:uiTiltGestures="false"/>

            <android.support.v7.widget.ToggleGroup
                style="@style/Widget.Material.ToggleGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:divider="@drawable/toggle_divider"
                app:orientation="vertical"
                app:exclusive="false"
                app:allowUnselected="true">
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/user_toggle"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:gravity="center"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_person"
                    android:checked='@{safeUnbox(searchVM.userToggle)}'
                    android:onClick="@{searchVM::toggleUsers}"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/venue_toggle"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:gravity="center"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_venue_icon"
                    android:checked="true"/>
            </android.support.v7.widget.ToggleGroup>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/search_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_bottomsheet_expanded"
            android:orientation="vertical"
            android:background="@color/md_grey_100"
            android:clickable="true"
            app:behavior_peekHeight="@dimen/search_bottomsheet_collapsed"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior"
            android:elevation="12dp">

            <android.support.v7.widget.ToggleGroup
                android:id="@+id/search_bottomsheet_header"
                style="@style/Widget.Material.ToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:orientation="horizontal"
                app:exclusive="true"
                app:allowUnselected="true">
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/search_bottomsheet_header_venuetype1"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_person"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/search_bottomsheet_header_venuetype2"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_venue_icon"
                    android:checked="false"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/search_bottomsheet_header_venuetype3"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_edit"
                    android:checked="false"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/search_bottomsheet_header_venuetype4"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_favorite_heart"
                    android:checked="false"/>
            </android.support.v7.widget.ToggleGroup>

            <android.support.v7.widget.Toolbar
                android:id="@+id/search_searchbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_grey_100"
                android:elevation="3dp"
                android:minHeight="?attr/actionBarSize"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:theme="?attr/actionBarTheme">
                <android.support.v7.widget.SearchView
                    android:id="@+id/search_searchbar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    style="@style/Widget.AppCompat.SearchView.ActionBar"/>
            </android.support.v7.widget.Toolbar>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/search_venue_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundTint="@android:color/white" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/search_bottomsheet"
            app:layout_anchorGravity="top|end"
            android:elevation="16dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/search_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_menu_search"
                android:tint="@color/white"
                android:elevation="16dp"
                android:onClick="@{frag::fab}"/>
        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/fragment_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/search_bottomsheet_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:contentScrim="@color/white"
            app:statusBarScrim="@color/white"
            android:background="@color/white"
            app:expandedTitleTextAppearance="@style/my_toolbar_text">

            <android.support.v7.widget.ToggleGroup
                android:id="@+id/searchinterface_sections_group"
                style="@style/Widget.Material.ToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bottomsheet_collapsed"
                android:background="@color/white"
                android:gravity="center"
                app:orientation="horizontal"
                app:exclusive="true"
                app:allowUnselected="true">
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_food"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_food"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_drinks"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_drinks"
                    android:checked="false"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_coffee"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_coffee"
                    android:checked="true"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_shops"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_shops"
                    android:checked="false"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_arts"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_arts"
                    android:checked="false"/>
                <android.support.v7.widget.ToggleButton
                    android:id="@+id/toggle_outdoors"
                    style="@style/Widget.Material.ToggleButton"
                    android:button="@drawable/ic_outdoors"
                    android:checked="false"/>
            </android.support.v7.widget.ToggleGroup>

            <LinearLayout
                android:id="@+id/searchinterface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dim_normal"
                android:layout_marginTop="@dimen/search_bottomsheet_collapsed"
                android:orientation="vertical"
                android:gravity="top"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_venue"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:height="?attr/actionBarSize">

                    <SearchView
                        android:id="@+id/toolbar_venue_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/md_grey_200"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search Venues" />
                </android.support.v7.widget.Toolbar>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_location"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:height="?attr/actionBarSize">

                    <SearchView
                        android:id="@+id/toolbar_location_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/md_grey_200"
                        android:iconifiedByDefault="false"
                        android:queryHint="Search Here" />
                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        style="@style/PrimaryFlatButton"/>
                    <Button
                        android:id="@+id/b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opening"
                        style="@style/PrimaryFlatButton"/>
                    <Button
                        android:id="@+id/b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        style="@style/PrimaryFlatButton"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/current_search_hint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bottomsheet_collapsed"
                app:title="Active Search Filter|ic|ic|"
                android:titleTextColor="@color/white"
                app:layout_collapseMode="parallax">
                <Button
                    android:id="@+id/research"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Reearch Here"
                    android:visibility="gone"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_blue_grey_200"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rvItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
